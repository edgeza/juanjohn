# Database Configuration (Docker)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/autonama
TIMESCALEDB_HOST=postgres
TIMESCALEDB_PORT=5432
TIMESCALEDB_DATABASE=autonama
TIMESCALEDB_USER=postgres
TIMESCALEDB_PASSWORD=postgres

# Database Configuration (Local Development)
# DATABASE_URL=postgresql://postgres:postgres@localhost:15432/autonama
# TIMESCALEDB_HOST=localhost
# TIMESCALEDB_PORT=15432

# Docker Configuration
DOCKER_CONTAINER=true

# Redis Configuration (External Redis on default port)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration (External Redis on default port)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Worker Configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_TASK_ACKS_LATE=true
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# Task Configuration
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600
CELERY_TASK_RETRY_DELAY=60
CELERY_TASK_MAX_RETRIES=3

# External APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
POLYGON_API_KEY=your-polygon-api-key
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key

# Data Processing Configuration
DATA_FETCH_INTERVAL=60
INDICATOR_CALCULATION_BATCH_SIZE=1000
OPTIMIZATION_TIMEOUT=3600
BACKTEST_LOOKBACK_DAYS=365

# Machine Learning Configuration
ML_MODEL_RETRAIN_INTERVAL=86400
ML_FEATURE_WINDOW_SIZE=100
ML_PREDICTION_HORIZON=24

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/celery.log

# Monitoring
PROMETHEUS_ENABLED=true
FLOWER_PORT=5555

# Development
DEBUG=true
TESTING=false
